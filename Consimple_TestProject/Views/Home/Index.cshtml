@using Consimple_TestProject.Models;

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <p class="control-label" align="left"><strong>Products list:</strong></p>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in ViewBag.ProductsInDB)
                    {
                        <tr>
                            <td class="text-center">@product.Id</td>
                            <td class="text-center">@product.Name</td>
                            <td><button type="submit" class="btn btn-primary" onclick="AddProductInOrder(@product.Id, '@product.Name')">Add in cart</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-1"></div>

    <!--<div class="col-md-8" style="visibility:hidden" id="Hidden" name="Hidden">-->
    <div class="col-md-8">
        <div class="list-group">
            <p class="control-label" align="center"><strong>Products in order:</strong></p>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Quantity</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var order in ViewBag.ProductsInCart)
                        {
                            int i = 1;
                        <tr>                            
                            <td class="text-center">@i++</td>
                            <td class="text-center">@order.ProductName</td>
                            <td class="text-center">@order.ProductPrice</td>
                            <td class="text-center">@order.ProductQuantity</td>
                        </tr>
                        }
                </tbody>

                
            </table>
            <button type="button" class="btn btn-primary" onclick="nextOrder=true">Buy</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    //function ShowHidden() {
    //    $("Hidden").prop("style", "visibility:visible");
    //}
    
    var nextOrder = false;
    
    function AddProductInOrder(id, name) {
        //alert(id);
        //alert(name);

        //$("Hidden").prop("style", "visibility:visible");

        var price = prompt("Input product price", "1");

        var quantity = prompt("Input product quantity", "1");

        
        //$("#Id").val(id);
        //$("#Name").val(name);
        //$("#Price").val(price);
        //$("#Quantity").val(quantity);

        $.ajax({
            cache: false,
            type: "POST",
            url: "/Home/AddProductInOrder/",
            data: {
                productId: id,
                productName: name,
                productPrice: price,
                productQuantity: quantity,
                nextOrder : nextOrder
            },
            success: function ()
            {
                window.location = "/";
            }
        });
    }
</script>